<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/upcoming_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@drawable/listdata_bg">

        <View
            android:id="@+id/color_view"
            android:layout_width="3dp"
            android:layout_height="140dp"
            android:background="@color/view_yellow" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingRight="8dp">

            <TextView
                android:id="@+id/match_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/seguisbi"
                android:maxLines="1"
                android:paddingRight="5dp"
                android:text="India Legends (INDL) vs Australia Legends (AUSL) India India India India"
                android:textColor="@color/text_blue"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/match_time"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/match_title"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/seguisb"
                android:maxLines="1"
                android:text="20TH mAR 2020 | 13:30 gmt"
                android:textColor="@color/text_blue"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/series_name"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/match_time"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/segoeui"
                android:singleLine="true"
                android:text="Road Safety World Series 2020"
                android:textColor="@color/text_blue"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/match_venue"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/series_name"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/segoeui"
                android:maxLines="2"
                android:text="The Maharashtra Cricket Association Stadium Gahunje, Pune, India"
                android:textColor="@color/text_blue"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/related_name"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/match_title"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/seguisbi"
                android:text="Twenty 20 Cricket Match"
                android:textColor="@color/text_blue"
                android:textSize="14dp" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>