<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/livelist_lay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="@dimen/_8sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_15sdp"
        app:cardCornerRadius="@dimen/_15sdp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/listview_bg"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/match_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/seguisbi"
                android:gravity="center"
                android:text="Indian Premier League"
                android:textColor="@color/text_blue"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/match_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/match_name"
                android:fontFamily="@font/segoeui"
                android:gravity="center"
                android:text="27th T20, 13 march 2020, 7:30 pm"
                android:textColor="@color/text_blue"

                android:textSize="12dp" />

            <TextView
                android:id="@+id/match_venue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/match_time"
                android:fontFamily="@font/segoeui"
                android:gravity="center"
                android:text="Dharmshala , Himachal Pradesh"
                android:textColor="@color/text_blue"
                android:textSize="12dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/match_venue"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/team1_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/team1_im"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="25dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_launchernew_round" />

                    <TextView
                        android:id="@+id/team1_name"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/seguisbi"
                        android:gravity="center"
                        android:text="Team Name"
                        android:textColor="@color/text_blue"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/team1_runs"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/match_time"
                        android:fontFamily="@font/segoeui"
                        android:gravity="center"
                        android:text="Market: 00-00"
                        android:textColor="@color/text_blue"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/team1_overs"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/match_time"
                        android:fontFamily="@font/segoeui"
                        android:gravity="center"
                        android:text="20 Overs: 00-00"
                        android:textColor="@color/text_blue"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/seguisb"
                        android:gravity="center"
                        android:text="VS"
                        android:textColor="@color/text_blue"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/related_name"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/match_time"
                        android:fontFamily="@font/segoeui"
                        android:gravity="center"
                        android:text="T20 - 1 Day"
                        android:textColor="@color/text_blue"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/countdown_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/seguisb"
                        android:gravity="center_horizontal"
                        android:text="00:00:00"
                        android:textColor="@color/text_green"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/team2_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/team2_im"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="25dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_launchernew_round" />

                    <TextView
                        android:id="@+id/team2_name"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/seguisbi"
                        android:gravity="center"
                        android:text="Team Name"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/team2_runs"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/match_time"
                        android:fontFamily="@font/segoeui"
                        android:gravity="center"
                        android:text="Market: 00-00"
                        android:textColor="@color/white"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/team2_overs"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/match_time"
                        android:fontFamily="@font/segoeui"
                        android:gravity="center"
                        android:text="20 Overs: 00-00"
                        android:textColor="@color/white"
                        android:textSize="12dp" />
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>